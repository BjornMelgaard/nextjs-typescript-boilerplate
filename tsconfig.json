{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./app/*"]
    },

    "noImplicitAny": true,
    "removeComments": true
  }
}
